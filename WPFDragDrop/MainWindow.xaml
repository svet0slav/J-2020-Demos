<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDragDrop"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="WPFDragDrop.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000" Background="Gray">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="100" LastChildFill="False" Margin="331,455,0,0" VerticalAlignment="Top" Width="100"/>
        <ListView Name="lvItems" HorizontalAlignment="Left" Height="568" Margin="34,56,0,0" VerticalAlignment="Top" Width="746"
                  ItemsSource="{Binding ItemsModel}" >
            <ListView.View>
                <GridView>
                    <!--<GridViewColumn x:Name="Category" Header="Category" Width="120"  DisplayMemberBinding="{Binding GroupName}" />-->
                    <GridViewColumn x:Name="Item" Header="Item" Width="120" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Foreground="White" FontWeight="Bold" FontSize="14" Text="{Binding Name}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander IsExpanded="True">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal"  Background="Black">
                                                    <TextBlock Text="{Binding GroupName}" FontWeight="Bold" FontSize="22" VerticalAlignment="Bottom" />
                                                    <TextBlock Text="{Binding ItemName}" FontSize="22" FontWeight="Bold" FontStyle="Italic" Margin="10,0,0,0" VerticalAlignment="Bottom"/>
                                                </StackPanel>
                                            </Expander.Header>
                                            <ItemsPresenter AllowDrop="True">
                                            </ItemsPresenter>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>


        </ListView>

    </Grid>
</Window>
